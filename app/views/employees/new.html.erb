<body class="bg-light">
    

<div class="row justify-content-center">
<div class="col-md-10 col-lg-6">
<div class="container-sm">


    <div class="py-5 text-center">
      <h2>Welcome to Finda Shift</h2>
      <p class="lead">First things first, please fill out some of your details below.</p>
    </div>

    <div class="col-md-12 order-md-1">
    <h4 class="mb-3">Your Employee Profile</h4>



    <%= form_with(model: @employee, local: true) do |form| %>
  
  
   
 


  




      <form class="needs-validation" novalidate="">

        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName">First name</label>
            <%= form.text_field :first_name, class: "form-control" %>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName">Last name</label>
            <%= form.text_field :last_name, class: "form-control" %>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>
       </div>

  

        <div class="mb-3">
          <label for="email">Email <span class="text-muted">(the email your employers will see)</span></label>
          <%= form.text_field :last_name, class: "form-control", placeholder: "your_email@example.com" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>



        <div class="row">
          <div class="col-md-7 mb-3">
            <label for="country">City</label>
            <%= form.text_field :city, class: "form-control" %>
          </div>

          <div class="col-md-5 mb-3">
            <label for="state">State</label>
            <%= form.text_field :state, class: "form-control" %>
          </div>
        </div>

           <div class="mb-3">
          <label for="about">About</label>
          <%= form.text_area :about, class: "form-control", placeholder: "Give a brief summary about yourself" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>
       
    
      
        </div>
        <hr class="mb-4">
        <%= form.submit "Continue", class: "actions btn btn-primary btn-lg btn-block py-2 my-3" %>

      <% end %>
     </form>
    </div>

</div>
</div>
</div>
</div>


