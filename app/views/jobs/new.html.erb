<body class="bg-light">
    

<div class="row justify-content-center">
<div class="col-md-10 col-lg-6">
<div class="container-sm">


    <div class="col-md-12 order-md-1 pt-5">
    <h4 class="mb-3">New Job lsiting</h4>





    <%= form_with(model: @job, local: true) do |form| %>
  
  
   
 


  




      <form class="needs-validation" novalidate="">

        <div class="row">
          <div class="col-md-12 mb-3">
            <label for="firstName">Job title</label>
            <%= form.text_field :title, class: "form-control" %>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
       </div>




        <div class="row">
          <div class="col-md-7 mb-3">
            <label for="country">City</label>
            <%= form.text_field :city, class: "form-control" %>
          </div>

          <div class="col-md-5 mb-3">
            <label for="state">State</label>
            <%= form.text_field :state, class: "form-control" %>
          </div>
        </div>

           <div class="mb-3">
          <label for="about">Job Description</label>
          <%= form.text_area :description, class: "form-control", placeholder: "" %>
          <div class="invalid-feedback">
            Please enter a valid email address for shipping updates.
          </div>
        </div>
       
      
      
        </div>
        <hr class="mb-4">
        <%= form.submit "Continue", class: "actions btn btn-primary btn-lg btn-block py-2 my-3" %>

      <% end %>
     </form>
    </div>

</div>
</div>
</div>
</div>


