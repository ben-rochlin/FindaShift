

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<section class="jumbotron">
  <div class="container text-center">
    <h1 class="display-4">Edit Account</h1>
    <%= link_to "Back", :back %> to profile
  </div>
</section>


<section>
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">

  <div class="field">
     Change your <%= f.label :email %> address:
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-light" %>
  </div>
<br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <i>Change your password:</i>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control my-3 bg-light", placeholder: "new password" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light", placeholder: "confirm new password" %>
  </div>
<br>
  <div class="field">
    <%= f.label :current_password %> <i></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control bg-light" %>
  </div>




  <div class="actions">
    <%= f.submit "Update My details", class: "actions btn-sm btn-secondary my-2 "  %>
  </div>
<% end %>

<br>
<br>
<br>

<h2>Delete Account? </h2>

<p><%= button_to "delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>



</div>
</div>
</div>















