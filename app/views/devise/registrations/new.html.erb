






<section class="jumbotron">
  <div class="container text-center">
    <h1 class="display-4">FindaShift Signup</h1>
  </div>
</section>




<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<section>
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">


      <label class="sr-only" for="input1-signin-01">Username</label>

        <%= f.input :name, autofocus: true, autocomplete: "username", class: "form-control my-3 bg-light" %>

        <label class="sr-only" for="input1-signin-01">Email</label>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-3 bg-light", placeholder: "Email" %>

        

       


        <label class="sr-only" for="input2-signin-01">Password</label>

        <%= f.password_field :password, autocomplete: "Password", class: "form-control my-3 bg-light", placeholder: "Password"  %>

   




        <%# <button class="btn btn-primary btn-block py-2 my-3">Sign Up!</button> %>
         <%= f.submit "Sign Up!", class: "actions btn btn-primary btn-block py-2 my-3"  %>
 
        <br>

        <%= f.radio_button :role, 'employee', checked: true %> <%= f.label :role, "Employee" %> 
   
        <%= f.radio_button :role, 'company', checked: true %> <%= f.label :role, "Company" %>   

 



        <br>

        <%= render "devise/shared/links" %> 
      </div>
    </div>
  </div>
</section>




<% end %>


