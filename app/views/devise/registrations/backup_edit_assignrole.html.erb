<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <section>
  <div class="container text-center">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">

        <label class="sr-only" for="input1-signin-01">Email</label>


        <%# <input class="form-control my-3 bg-light" id="input2-signin-01" type="password" placeholder="Password"> %>




        <%# <button class="btn btn-primary btn-block py-2 my-3">Sign Up!</button> %>
        
 
        <br>

        <%= f.radio_button :role, 'employee', checked: true %> <%= f.label :role, "Employee" %> 
   
        <%= f.radio_button :role, 'company' %> <%= f.label :role, "Employer" %>   

        <br>

         <%= f.submit "Sign Up!", class: "actions btn btn-primary btn-block py-2 my-3"  %>


<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
